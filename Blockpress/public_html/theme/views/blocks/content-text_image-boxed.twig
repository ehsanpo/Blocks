<section class="image-text-block-boxed {% if class %}{{class}}{% endif %} {% if add_padding %} add_padding{% endif %}">
	<div class="wrapper">
		<div class="grid--2 {% if image_on_left %}image_on_left{% endif %}">
			<div {% if animation %}data-aos="{{animation}}"{% endif %}  class="itb-image lazyload" data-bg="{{image|resize(1400)}}"></div>
			<div class="itb-text">
				<h2 {% if animation %}data-aos="{{animation}}"{% endif %} >{{headline}}   </h2>
				<div {% if animation %}data-aos="{{animation}}"{% endif %} >{{body_text}}</div>
				{% if stn_link %}
				<div class="itb-footer">
					<ul>
						{% for item in stn_link %}
							{% if item.link_type == 'url' %}
								<li>
									<a {% if animation %}data-aos="{{animation}}"{% endif %}  href="{{ item.link_url }}" class="btn btn--white">{{ item.link_text }}</a>
								</li>
							{% endif %}
							{% if item.link_type == 'page' %}
								<li>
									<a {% if animation %}data-aos="{{animation}}"{% endif %}  href="{{ item.link_page }}" class="btn btn--white">{{ item.link_text }}</a>
								</li>
							{% endif %}
						{% endfor %}
					</ul>
				</div>
			{% endif %}
			</div>
		</div>
	</div>
</section>
