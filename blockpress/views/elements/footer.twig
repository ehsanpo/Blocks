<footer class="footer" role="contentinfo">
	<div class="wrapper">
		<div class="grid grid--auto-c">
			<div class="col-logo" itemscope itemtype="http://schema.org/Organization">
				<a href="/" class="footer-logo" aria-label="{{ site.name }}">
					{% include "atoms/logo.svg" %}
				</a>
				<div class="address" itemprop="address" itemscope="" itemtype="http://schema.org/PostalAddress">
					{{ footer.address }}
					<div class="copyr">
						Â© Copyright {{"now"|date('Y')}} 
					</div>	
				</div>
				
			</div>
			<nav class="navigation footer__navigation" aria-label="{{__('Menu', 'site')}}">
				<ul class="navigation__footer" role="menubar">
					{% for item in footer_menu.get_items %}
						<li role="menuitem">
							<a {% if item.current %}data-selected{% endif %} href="{{item.get_link}}">{{item.title}}</a>
						</li>
					{% endfor %}
				</ul>
			</nav>
			<div class="col social">
				<a href="{{options.facebook_link}}">{% include "atoms/facebook.svg" %}</a>
				<a href="{{options.instagram_link}}">{% include "atoms/instagram.svg" %}</a>
			
				<div class="checkbox-toggle swish-holder">
					<h6>Dark /Light</h6>
					<input class="container_toggle" type="checkbox" id="switch" name="mode" />
					<label for="switch"></label>
	  			 </div>
			</div>
		</div>
	
	</div>
</footer>
