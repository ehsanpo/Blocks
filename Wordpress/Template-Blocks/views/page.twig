{% extends 'layout/base.twig' %}

{% block head %}
	{% if post.thumbnail %}
		<meta property="og:image" content="{{post.thumbnail}}" />
	{% endif %}
{% endblock %}

{% block content %}
	{% if post.get_field('sections') %}
		{{ render.sections(post.get_field('sections')) }}
	{% endif %}
{% endblock %}
