<section class="bp-block {{block.name}} {{block.className}} align{{block.align}} {% if fields.add_padding %} add-padding{% endif %}" {% if fields.block_color is not empty %} style="background-color:{{fields.block_color}}" {% endif %}>
	<div class="wrapper">
		<div class="grid--2 {% if fields.image_on_left %}image-on-left{% endif %}">
			<div class="itb-image lazyload" data-bg="{{fields.image|resize(1400)}}"></div>
			<div class="itb-text">
				<h2 {% if fields.block_animations %} data-aos="{{fields.animation_type}}" {% endif %}>{{fields.headline}}</h2>
				<div{% if fields.block_animations %} data-aos="{{fields.animation_type}}" data-aos-delay="100" {% endif %}>{{fields.body_text}}</div>
				{% if fields.stn_link %}
				<div class="itb-footer" {% if fields.block_animations %} data-aos="{{fields.animation_type}}"  data-aos-delay="200" {% endif %}>
					<ul>
						{% for item in fields.stn_link %}
							{% if item.link_type == 'url' %}
								<li>
									<a href="{{ item.link_url }}" class="btn btn--white">{{ item.link_text }}</a>
								</li>
							{% endif %}
							{% if item.link_type == 'page' %}
								<li>
									<a href="{{ item.link_page }}" class="btn">{{ item.link_text }}</a>
								</li>
							{% endif %}
						{% endfor %}
					</ul>
				</div>
			{% endif %}
			</div>
		</div>
	</div>
</section>
